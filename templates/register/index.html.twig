{% extends 'base.html.twig' %}

{% block title %}Créer un compte
{% endblock %}

{% block body %}

		{{form_start(form)}}
		{{form_row(form.email)}}
		{{form_row(form.password)}}
		<div class="d-flex align-items-center mb-3">
			<button class='btn btn-primary me-2'>S'enregistrer</button>
			<small>
				<a href="{{ path('app_login') }}">
					Vous avez déja un compte ?</a>
			</small>
		</div>

		{{form_end(form)}}
{% endblock %}
