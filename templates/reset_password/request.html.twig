{% extends 'base.html.twig' %}

{% block title %}Changer son mot de passe{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <div class="form mb-3 flex-column">
    <h2 class="m-4">Mot de passe oubli√© ?</h2>

    {{ form_start(requestForm) }}
    {{ form_row(requestForm.email) }}
        <button class="btn btn-primary w-100 my-3">Changer le mot de passe</button>
    {{ form_end(requestForm) }}
    </div>
{% endblock %}
